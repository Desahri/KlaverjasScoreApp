<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TreeSelectActivity">

    <ListView
        android:id="@+id/treelist"
        android:layout_width="match_parent"
        android:layout_height="0dp"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/treelistPlayer1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/treelistPlayer1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        app:layout_constraintBottom_toTopOf="@+id/treelistPlayer2"
        app:layout_constraintLeft_toLeftOf="parent"

        android:padding="15dp"

        android:textSize="10pt" />

    <TextView
        android:id="@+id/treelistPlayer2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"

        android:padding="15dp"

        android:textSize="10pt" />

    <TextView
        android:id="@+id/treelistPlayer3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        app:layout_constraintTop_toBottomOf="@+id/treelist"
        app:layout_constraintLeft_toRightOf="@id/treeMiddle"

        android:padding="15dp"

        android:textSize="10pt" />

    <TextView
        android:id="@+id/treelistPlayer4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/treeMiddle"

        android:padding="15dp"

        android:textSize="10pt" />

    <TextView
        android:id="@+id/treelistPlayer1Score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"

        app:layout_constraintTop_toTopOf="@+id/treelistPlayer1"
        app:layout_constraintBottom_toBottomOf="@+id/treelistPlayer1"
        app:layout_constraintRight_toLeftOf="@id/treeMiddle"
        android:layout_marginRight="10dp"

        android:textSize="14pt" />

    <TextView
        android:id="@+id/treelistPlayer2Score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"

        app:layout_constraintTop_toTopOf="@+id/treelistPlayer2"
        app:layout_constraintBottom_toBottomOf="@+id/treelistPlayer2"
        app:layout_constraintRight_toLeftOf="@id/treeMiddle"
        android:layout_marginRight="10dp"

        android:textSize="14pt" />

    <TextView
        android:id="@+id/treelistPlayer3Score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"

        app:layout_constraintTop_toTopOf="@+id/treelistPlayer3"
        app:layout_constraintBottom_toBottomOf="@+id/treelistPlayer3"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="10dp"

        android:textSize="14pt" />

    <TextView
        android:id="@+id/treelistPlayer4Score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"

        app:layout_constraintTop_toTopOf="@+id/treelistPlayer4"
        app:layout_constraintBottom_toBottomOf="@+id/treelistPlayer4"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="10dp"

        android:textSize="14pt" />

    <View
        android:id="@+id/treeMiddle"
        android:layout_width="1dp"
        android:layout_height="1dp"

        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />

</android.support.constraint.ConstraintLayout>