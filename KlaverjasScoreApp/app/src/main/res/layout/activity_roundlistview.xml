<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/roundNumber"
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:gravity="end"

        android:textSize="18pt"

        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/roundTeam1Points"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:gravity="end"

        android:textSize="15pt"
        app:layout_constraintBottom_toBottomOf="@+id/roundNumber"
        app:layout_constraintTop_toTopOf="@id/roundNumber"
        app:layout_constraintRight_toLeftOf="@+id/teamdivider"
        app:layout_constraintLeft_toRightOf="@+id/roundNumber"
        app:layout_constraintHorizontal_bias="0.1" />

    <TextView
        android:id="@+id/roundTeam1Roem"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:gravity="end"

        android:textSize="10pt"
        app:layout_constraintBottom_toBottomOf="@+id/roundNumber"
        app:layout_constraintTop_toTopOf="@id/roundNumber"
        app:layout_constraintRight_toLeftOf="@+id/teamdivider"
        app:layout_constraintLeft_toRightOf="@+id/roundNumber"
        app:layout_constraintHorizontal_bias="0.9" />

    <TextView
        android:id="@+id/roundTeam2Points"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:gravity="end"

        android:textSize="15pt"
        app:layout_constraintBottom_toBottomOf="@+id/roundNumber"
        app:layout_constraintTop_toTopOf="@id/roundNumber"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/teamdivider"
        app:layout_constraintHorizontal_bias="0.1" />

    <TextView
        android:id="@+id/roundTeam2Roem"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:gravity="end"

        android:textSize="10pt"
        app:layout_constraintBottom_toBottomOf="@+id/roundNumber"
        app:layout_constraintTop_toTopOf="@id/roundNumber"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/teamdivider"
        app:layout_constraintHorizontal_bias="0.9" />

    <View
        android:layout_width="2dp"
        android:layout_height="60dp"
        android:background="#000000"

        app:layout_constraintLeft_toRightOf="@+id/roundNumber" />

    <View
        android:id="@+id/teamdivider"
        android:layout_width="1dp"
        android:layout_height="60dp"
        android:background="#000000"

        app:layout_constraintLeft_toRightOf="@+id/roundNumber"
        app:layout_constraintRight_toRightOf="parent" />

    <View
        android:id="@+id/roundsitemdivider"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#000000"

        app:layout_constraintTop_toBottomOf="@+id/teamdivider" />
</android.support.constraint.ConstraintLayout>