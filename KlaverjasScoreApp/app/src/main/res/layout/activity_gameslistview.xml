<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_alignParentRight="true">

    <ImageView
        android:id="@+id/gamedoneIcon"
        android:layout_width="70dp"
        android:layout_height="70dp"

        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        android:src="@drawable/cross" />

    <TextView
        android:id="@+id/gamenametext"
        android:layout_width="0dp"
        android:layout_height="@+id/gamedoneIcon"
        android:layout_gravity="center"

        app:layout_constraintBottom_toBottomOf="@+id/gamedoneIcon"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/gamedoneIcon"
        app:layout_constraintTop_toTopOf="@+id/gamedoneIcon"

        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"

        android:textSize="12pt"
        android:textColor="#000000" />
</android.support.constraint.ConstraintLayout>